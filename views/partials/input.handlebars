<label for="input-group-{{type}}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
  {{label}}
</label>
<div class="relative mb-6">
  <div class="absolute border-gray-100 inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-600">
    <img src="/images/svg/{{icon}}.svg" class="" alt={{label}} />
  </div>
  <input type={{type}} id="input-group-{{type}}"
    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-14 outline-none p-2.5  dark:bg-gray-700 dark:focus-within:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
    placeholder={{placeholder}} />
</div>